RewriteEngine On
RewriteBase /qlnhansu_V2/

# Allow direct access to API files
RewriteRule ^backend/src/public/admin/api/.*\.php$ - [L]

# Handle API requests
RewriteRule ^api/(.*)$ backend/src/public/admin/api/$1 [L]

# Redirect /admin to dashboard_admin_V1.html
RewriteRule ^admin/?$ backend/src/public/admin/dashboard_admin_V1.html [L]

# API Rewrite Rules
RewriteRule ^api/dashboard/data$ backend/src/api/dashboard_data.php [L]

# Allow direct access to test_api.html
RewriteRule ^test_api\.html$ - [L]

# Handle all other requests
RewriteRule ^(.*)$ index.php [L] 